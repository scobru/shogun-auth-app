# DROP Application - File di configurazione .env
# Rinomina questo file in .env per attivare le variabili d'ambiente

# Server configuration
PORT=3000
NODE_ENV=development

# File limits
FILE_SIZE_LIMIT_MB=10
MAX_USER_DROPS=5

# Rate limiting
RATE_LIMIT_UPLOADS_MAX=5
RATE_LIMIT_UPLOADS_PERIOD=3600000
RATE_LIMIT_DOWNLOADS_MAX=20
RATE_LIMIT_DOWNLOADS_PERIOD=3600000

# API Configuration
API_URL=http://localhost:8765
API_TOKEN=thisIsTheTokenForReals

# Gun DB Configuration
GUNDB_PEERS=http://localhost:8765/gun
GUNDB_LOCAL_STORAGE=false
GUNDB_RADISK=false

# Authentication settings
WEBAUTHN_NAME=Shogun DROP
WEBAUTHN_ID=
METAMASK_ENABLED=true

# IPFS Configuration
IPFS_GATEWAY=http://localhost:8080/ipfs

# UI Configuration
APP_NAME=DROP
APP_DESCRIPTION=Sistema di condivisione file decentralizzato
GITHUB_REPO=https://github.com/your-repo

# Theme
THEME_PRIMARY=#0078ff
THEME_ACCENT=#00c16e
THEME_SUCCESS=#00c16e
THEME_WARNING=#ffb801
THEME_ERROR=#ff3d57

# Background images (comma-separated)
BACKGROUND_IMAGES=https://images.unsplash.com/photo-1579546929518-9e396f3cc809?auto=format&fit=crop&w=1800&q=80,https://images.unsplash.com/photo-1541701494587-cb58502866ab?auto=format&fit=crop&w=1800&q=80 