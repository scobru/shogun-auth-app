{
  "name": "shogun-core",
  "version": "0.1.0",
  "description": "SHOGUN SDK - Libreria semplificata per la gestione di wallet crypto con GunDB",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "format": "npx prettier --write 'src/**/*.ts'",
    "docs": "yarn typedoc --options typedoc.json"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "gun",
    "ethereum",
    "wallet",
    "crypto",
    "gunDB"
  ],
  "author": "Scobru",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "base64url": "^3.0.1",
    "ethers": "^6.11.1",
    "gun": "file:../gun",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.5.1",
    "prettier": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typedoc": "^0.27.9",
    "typescript": "^5.3.3"
  }
}
