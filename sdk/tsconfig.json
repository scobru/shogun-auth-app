{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["solid-js"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 