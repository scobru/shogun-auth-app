{
  "name": "shogun",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shogun-relay",
    "shogun-protocol",
    "shogun-core",
    "shogun-button",
    "shogun-wallet-app",
    "shogun-messenger-app",
    "shogun-task-app",
    "ts-minimal"
  ],
  "scripts": {
    "build-all": "cd shogun-core && yarn build && cd ../shogun-button && yarn build",
    "start-relay": "node shogun-relay/start.js",
    "start-messenger": "cd shogun-messenger-app && yarn start",
    "start-wallet": "cd shogun-wallet-app && yarn dev",
    "build-sdk": "cd shogun-core && yarn build"
  }
} 